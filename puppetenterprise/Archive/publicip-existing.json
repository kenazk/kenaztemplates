{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "location": {
      "type": "string"
    },
    "publicIPAddressName": {
      "type": "string"
    },
    "publicIPAddressDomainNameLabel": {
      "type": "string"
    },
    "publicIPAddressResourceGroup": {
      "type": "string"
    }
  },
  "variables": {
    "publicIpId": "[resourceId(parameters('publicIPAddressResourceGroup'),concat('Microsoft.Network','/','publicIPAddresses'),parameters('publicIPAddressName'))]"
  },
  "resources": [],
  "outputs": {
    "publicIpId": {
      "value": "[variables('publicIpId')]",
      "type": "string"
    },
    "fqdn": {
      "value": "[reference(variables('publicIpId'),providers('Microsoft.Network', 'publicIPAddresses').apiVersions[0]).dnsSettings.fqdn]",
      "type": "string"
    }
  }
}
